<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_signout">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="161dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="38dp"
        >
        <ImageView
            android:id="@+id/ic_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_profile_signout"


            />
        <TextView
            android:id="@+id/title_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/ic_profile"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Profile"
            android:textSize="17sp"
            android:fontFamily="@font/bevietnampro_semibold"
            android:textColor="@color/white"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/line1"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="#F4F4F8"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/layout_profile"
        app:layout_constraintTop_toBottomOf="@id/layout_profile"

        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_profile"
        android:layout_marginStart="38dp"
        >
        <ImageView
            android:id="@+id/ic_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_order_signout"


            />
        <TextView
            android:id="@+id/title_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/ic_order"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Orders"
            android:textSize="17sp"
            android:fontFamily="@font/bevietnampro_semibold"
            android:textColor="@color/white"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="#F4F4F8"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/layout_order"
        app:layout_constraintTop_toBottomOf="@id/layout_order"

        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_order"
        android:layout_marginStart="38dp"
        >
        <ImageView
            android:id="@+id/ic_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_offer_signout"


            />
        <TextView
            android:id="@+id/title_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/ic_offer"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Offer and promo"
            android:textSize="17sp"
            android:fontFamily="@font/bevietnampro_semibold"
            android:textColor="@color/white"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/title_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/layout_order"
        app:layout_constraintTop_toBottomOf="@id/layout_offer"
        android:layout_marginTop="400dp"
        android:textSize="17sp"
        android:fontFamily="@font/bevietnampro_semibold"
        android:textColor="@color/white"
        android:text="Sign-out"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/title_signout"
        app:layout_constraintTop_toBottomOf="@+id/layout_offer"
        android:layout_marginTop="408dp"
        android:src="@drawable/ic_next_signout"
        android:layout_marginStart="12dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>